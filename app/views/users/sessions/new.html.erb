<% content_for :mLogin do %>
    <%= render :partial => '/login/login' %>
<% end %>
<% content_for :mBody do %>
	<style>
	body{
		background-image: url("http://i.imgur.com/ttj3paK.jpg");

	}	
	</style>
<% end %>
<div class="whole-page">
  <div class="login-page">
           <%= form_for(resource, :html => { :class => "login-form" }, as: resource_name, url: session_path(resource_name)) do |f| %>
                    
                  <div class="field">
                      <%= f.email_field :email, placeholder: "Email", :class => 'inputbox', :autofocus => true %>
                    <br>
                      <%= f.password_field :password, placeholder: "Password", :class => 'inputbox', :autofocus => true, :autocomplete => :off %>
                  </div>
                    
                  <br>
                  <% if devise_mapping.rememberable? %>
                      <%= f.check_box :remember_me, :style => "width: 20px; height: 20px;float: left;margin: 0" %> 
                      <span style="float: left;margin-left: 5px; font-size: 13pt">Remember Me</span>
                  <% end %>  
                  <div class="actions">
                    <%= f.submit "LOGIN", :class => 'login-form-button ' %>
                  </div>
                    
                  <br>
                    
                  </br>
                  <%= render "users/shared/links" %>
          <% end %>
  </div>
</div>