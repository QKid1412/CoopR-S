<div class="container">
  <div class="row">
    <div class="col-md-3"></div>
      <div class="col-md-6">
          <div class="panel">
            <div class="panel-heading">
              <h3 class="centered">LOGIN MY ACCOUNT</h3>
              <h4 class="centered"> —————— </h4>
              <br>
            </div>
            
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

          <%= f.label :Email, "EMAIL"%></br>
          <%= f.email_field :email,  :class => 'form-control input-lg', :autofocus => true %>

          <%= f.label :Password , "PASSWORD"%></br>
          <%= f.password_field :password, :class => 'form-control input-lg', :autofocus => true, :autocomplete => :off %>
          
          <% if devise_mapping.rememberable? %>
            <!--<div class="field">-->
          <%= f.check_box :remember_me %> <span style="font-size: 12px; font-weight: bold"> REMEMBER ME</span>
            <!--%= f.label :remember_me %-->
            <!--</div>-->
          <% end %>
          
          <%= f.submit "LOGIN", :class => 'btn-block btn-lg', style: "background-color: #FE4A49; border: 2px solid #FE4A49; font-weight: bold; color: white" %>
          <%= render "users/shared/links" %>
          
        
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
