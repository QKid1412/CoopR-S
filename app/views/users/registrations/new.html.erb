<% content_for :mHeader do %>
  <%= javascript_include_tag 'faker', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'passwordMeter', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'random', 'data-turbolinks-track' => true %>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-md-3"></div>
      <div class="col-md-6">
        
        <div class="signup-login">
          <div class="panel">
            <div class="panel-heading">
              <h3 class="centered">REGISTER NEW ACCOUNT</h3>
              <h4 class="centered"> —————— </h4>
            </div>
            
            <%= form_for @user, as: :user, url: {action: "create"} do |f| %>
            <%= devise_error_messages! %>
            
            
            <%= f.label :Email, "Email *" %>
            <%= f.email_field :email, :class => 'form-control input-lg' , :autofocus => true, :onkeyup => "validateEmail" %>
            <img src = "/ok-24.gif" alt="checkmark" id ="emailCheck" >
            
            <%= f.label :Password %>
            <%= f.password_field :password, class: 'form-control input-lg' , autocomplete: "off", :onkeyup => "validatePassword()"  %>
            <img src = "/ok-24.gif" alt="checkmark" id ="passwordCheck">
            
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %>
            
            <%= f.label :Password, "Confirm Password" %><
            <%= f.password_field :password_confirmation, class: 'form-control input-lg' , autocomplete: "off" , autofocus: true, :onkeyup => "validatePassword()" %>
            <img src = "/ok-24.gif" alt="checkmark" id ="passwordConfirmationCheck" >
            
            <div class="meter" > 
              <div id="passwordMeter" style=" text-align:center; height: 20px;border-radius: 5px;">
                <span id="meterText"></span>
              </div>
            </div>
            
            <div class="field" style= "text-align: left">
              <%= f.radio_button :type, 'Student', :checked => true %> STUDENT 
              <!--%= label :type_student, 'Student' %-->
              <%= f.radio_button :type, 'Company' %> COMPANY
              <!--%= label :type_company, 'Company' %-->
            </div>
            
            <div class="actions">
              <%= f.submit "SUBMIT"%>
            </div>
            
            <span style="text-align: center">Already a member? <%= render "users/shared/links" %></span>
            
            <button class="button" type="button" onclick="lastUrl()">Back</a>
            
            <% end %>
          
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


