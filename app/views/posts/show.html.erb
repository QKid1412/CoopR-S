<% content_for :mLogin do %>
    <%= render :partial => '/login/login' %>
<% end %>
<p id="notice"><%= notice %></p>

<div class="table-title">
        <h3>Show Post</h3>
</div>

<div class="show-post">
  <p>
    <strong>Title:</strong>
    <%= @post.title %>
  </p>

  <p>
    <strong>Body:</strong>
    <%=raw @post.body %>
  </p>

 <% if current_user.admin? %>
  <p>
    <strong>Type:</strong>
    <%= @post.type %>
  </p>
  <% end %>
  <p>
    <strong>Owner:</strong>
    <%= @post.owner_name %>
  </p>
</div>
<%= link_to '<button class="button" type="button">Edit</button>'.html_safe, edit_post_path(@post) %> 
<% if current_user.admin? %>
        <%= link_to '<button class="button" type="button">Back</button>'.html_safe, posts_path %>
<% else %>
        <%= link_to '<button class="button" type="button">Back</button>'.html_safe, root_path %>
<% end %> 
