<% content_for :mLogin do %>
    <%= render :partial => '/login/login' %>
  <style>
  body{
    background-image: url("//i.imgur.com/Y8A7Ihk.jpg");
  } 
  </style>
<% end %>

<% content_for :mFrame do %>

<script type="text/javascript">
  updateUrl();
</script>


    <div class="table-title">
        <h3>Listing Posts</h3>
    </div>

    <table class="table-list-users">
      <thead>
        <tr>
          <th>Title</th>
          <th class="body-width">Body</th>
          <th>Type</th>
          <th>Owner</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td><%= post.title %></td>
            <td class="body-width"><%= Sanitize.fragment(post.body.split[0..10].join).truncate(100) %>...</td>
            <td><%= post.type %></td>
            <td><%= post.owner_name %></td>
            <td><%= link_to 'Show', post %></td>
            <td><%= link_to 'Edit', edit_post_path(post) %></td>
            <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

<% end %>

<button class="button" type="button" onclick="lastUrl()">Back</button>

