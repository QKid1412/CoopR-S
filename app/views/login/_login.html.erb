<div id="user_signed_in" class="login-form exlarge">
    <% if user_signed_in? %>
        <b><%= link_to(current_user.display_name, setting_path, :class => "display_name" ) %></b>
        <span style="color: white;">|</span>
        <%= button_to "LOG OUT", destroy_user_session_path, :method => :delete %>
   	<% else %>
   	    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                    
        <div>
          <%= f.email_field :email, placeholder: "Email", :class => 'form-control', :autofocus => true %>
          <%= f.password_field :password, placeholder: "Password", :class => 'form-control', :autofocus => true, :autocomplete => :off %>
          <%= f.submit "LOG IN", style: "border-style: ridge" %>
        </div>
        <% end %>
    <% end %>
</div>

