<div id="user_signed_in">
    <% if user_signed_in? %>
        <b style="font-size: 16pt;float: right; margin:30px;">Hello <span style="color: #b2191b;"><%= current_user.display_name %></span>! 
        <%= link_to '>Sign out'.html_safe, destroy_user_session_path, :method => :delete %></b>
    <% else %>        
		<div class="container">
		  <div class="row" id="pwd-container">
		    <div class="col-md-4">
		      <section class="login-form">
		          <div id="loginContainer">
		            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
		            <div class="field">
		              <%= f.email_field :email, placeholder: "Email", :class => 'form-control input-lg', :autofocus => true %>
		              <%= f.password_field :password, placeholder: "Password", :class => 'form-control input-lg', :autofocus => true, :autocomplete => :off %>
		            </div>
		            
		            <div class="actions">
		              <%= f.submit "LOGIN", :class => 'button btn-success btn-lg btn-primary btn-block' %>
		            </div>
		            
		              <% if devise_mapping.rememberable? %>
		                <%= f.check_box :remember_me %> Remember Me
		              <% end %>
		            
		            <br />
					<% end %>
		            <%= render "users/shared/links" %>
		          </div>
		      </section>
		    </div>
		  </div>
		</div>
    <% end %>
</div>

