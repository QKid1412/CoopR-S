<%= form_for @coverletter do |f| %>

    <h2>Basic Info</h2>
    
    <%= f.label :name  %>
    <%= f.text_field :name %><br>
    
    <%= f.label :phone %>
    <%= f.text_field :phone %><br>
    
    <%= f.label :summary, "Body" %>
    <%= f.text_area :summary %><br>
    
    <%= f.label :email %>
    <%= f.text_field :email %><br>
    
    <%= f.label :gitweb, "Git Link: " %>
    <%= f.text_field :gitweb %><br>