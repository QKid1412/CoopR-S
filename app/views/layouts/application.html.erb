<!DOCTYPE html>
<html>
    <head>
      <title>CoopRS</title>
    
      <%= stylesheet_link_tag    'application', media: 'all' %>
      <%= javascript_include_tag 'application' %>
      <%= yield :mHeader %>
      
      <%= favicon_link_tag 'dummy.ico' %>
      <%= csrf_meta_tags %>
    </head>
    
    <body>
        
    <div class="whole-head">
      <div class="project-header large">
        <div class="left"><a class="project-title" href="/"><span class="R-S" data-letter="C">C</span>OOP<span class="R-S" data-letter="R">R</span>&amp;<span class="R-S" data-letter="S">S</span></a></div>
        <div class="toptext exlarge">WEBSITE FOR COOP STUDENTS, REVIEWING AND SHARING</div>
        <div><%= yield :mLogin %></div>
      </div>
      <div class="top-navbar">
        <% if user_signed_in? %>
        
            <% if current_user.admin? %>
              
                <ul>
                  <li class="large"><a href="/"><img class="topnav-icons icon" src="//i.imgur.com/RO5VA6h.png" /></a></li>
                  
                  <li class="dropdown"><a href="/admin/" class="dropbtn">ACTION</a>
                        <div class="dropdown-content">
			                      	<a href="/admin/">VIEW ALL USERS</a>
			                      	<a href="/posts/new" data-turbolinks="false">NEW POSTS</a>
		                      		<a href="/posts/">MANAGE POSTS</a>
		                  	</div>
		              </li>
                  <li><a href="/posts/new" data-turbolinks="false">WRITE A POST</a></li>
                  <li style="float:right"><%= link_to destroy_user_session_path, :method => :delete do %><img class="signout-icon icon" src="http://i.imgur.com/qgNZck9.png"/><span>&nbsp;&nbsp;SIGN OUT</span><% end %> </li> 
                  
                  <li style="float:right"> <%= link_to('SETTING', setting_path ) %> </li> 
                </ul>
             
            <% else %>
              
                <ul>
                  <li class="large"><a href="/"><img class="topnav-icons icon" src="//i.imgur.com/RO5VA6h.png"/></a></li>
            
                  <li> <a href="/posts/new" data-turbolinks="false">WRITE A POST</a></li>

                  <li style="float:right"><%= link_to destroy_user_session_path, :method => :delete do %><img class="signout-icon icon" src="//i.imgur.com/qgNZck9.png"/><span>&nbsp;&nbsp;SIGN OUT</span><% end %> </li> 

                  <li style="float:right"> <%= link_to('SETTING', setting_path ) %> </li> 
                </ul>
              
            <% end %>
          <% else %>
                <ul>
                  <li class="large"><a href="/"><img class="topnav-icons icon" src="//i.imgur.com/RO5VA6h.png"/></a></li>
                  <li> <a href="/text">INTRO</a></li> 
                  <li style="float:right"><%= link_to new_user_session_path do %><img class="signout-icon icon" src="http://i.imgur.com/qgNZck9.png"/><span>&nbsp;&nbsp;LOG IN</span><% end %> </li> 
                  <li style="float:right"><a href="/users/sign_up"><img class="signout-icon icon" src="//i.imgur.com/5VPaM9H.png"/>&nbsp;&nbsp;SIGN UP</a></li> 
                </ul>
                
          <% end %>
      </div>
    </div>
    <div class="content">
      <div class="notice"><%= notice %></div>
      <div class="alert"><%= alert %></div>
      <%= yield :mFrame %>
    </div>

    <div>
      <%= yield %>
    </div>
    

    </body>
</html>
